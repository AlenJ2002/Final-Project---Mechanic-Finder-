<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalAssignment.Pages.ReviewsPage"
             Title="ReviewsPage">

    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*" RowDefinitions="*,*,*,*,*">
        <Label x:Name="averageRatingLabel" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" FontSize="16" Text="Average rating: "/>
        <VerticalStackLayout Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" Grid.ColumnSpan="2" Spacing="25">
            <Label Text="Name:"/>
            <Entry x:Name="ReviewerNameEntry"/>

            <Label x:Name="ratingLabel" Text="Rating:"/>
            <Slider x:Name="ratingSlider" WidthRequest="200" Minimum="1" Maximum="5" ValueChanged="onRatingSliderChanged"/>

            <Label Text="Comment:"/>
            <Entry x:Name="CommentsEntry"/>

            <Button Text="Submit Review" Clicked="onSubmitButtonClicked"/>
        </VerticalStackLayout>

        <ScrollView Grid.Row="0" Grid.Column="4" Grid.RowSpan="5" Grid.ColumnSpan="5">
            <VerticalStackLayout x:Name="reviewList" VerticalOptions="Center" HorizontalOptions="Center">
                <!-- Add reviews here -->
                <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Text="Reviews will appear here."/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>