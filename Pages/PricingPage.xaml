<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalAssignment.Pages.PricingPage"
             Title="PricingPage">

    <VerticalStackLayout Spacing="13"
                         Padding="30"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Picker x:Name="ServicePicker"/>
        <Entry x:Name="OilTypeEntry"/>
        <Entry x:Name="FilterTypeEntry"/>
        <Entry x:Name="VehicleMakeEntry"/>
        <Entry x:Name="VehicleModelEntry"/>
        <Entry x:Name="VehicleModelYear"/>
        <Label x:Name="PriceLabel"/>

    </VerticalStackLayout>
</ContentPage>