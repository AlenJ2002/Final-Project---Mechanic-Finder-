<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalAssignment.Pages.LocationPage">

    <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="*,*,*,*,*,*,*,*,*">
        <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" FontSize="32" FontAttributes="Bold" Text="Shop Location:"/>
        <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" FontSize="16" Text="123 Bob St."/>
        <Label Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" FontSize="16" Text="Coquitlam, BC"/>
        <Label Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" FontSize="32" FontAttributes="Bold" Text="Hours of Operations:"/>
        <Label Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" FontSize="16" Text="Monday - Friday: 08:00 - 19:00"/>
        <Label Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" FontSize="16" Text="Saturday - Sunday: Closed"/>
        <Label Grid.Row="1" Grid.RowSpan="7" Grid.Column="4" Grid.ColumnSpan="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Text="Insert a map here."/>
    </Grid>
</ContentPage>
