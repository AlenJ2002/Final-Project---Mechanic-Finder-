<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinalAssignment.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinalAssignment.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="FinalAssignment">
    <!-- Shell.FlyoutBehavior="Flyout" -->
    
    <ShellContent
        Title="LandingPage"
        ContentTemplate="{DataTemplate local:LandingPage}"
        Route="LandingPage" />

	<ShellContent
        Title="SignupPage"
        ContentTemplate="{DataTemplate local:SignupPage}"
        Route="SignupPage" />
	<ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
	<ShellContent
        Title="HomePage"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage" />


</Shell>
